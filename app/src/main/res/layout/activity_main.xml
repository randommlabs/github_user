<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".modules.github_search.GithubSearchView">

    <data>
        <import type="android.view.View"/>
        <variable
            name="GithubSearchViewModel"
            type="com.randommlabs.github_info.modules.github_search.GithubSearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/et_user"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:layout_marginTop="88dp"
            android:hint="Username"
            android:text="@={GithubSearchViewModel.user}"
            android:textColorHint="@color/cardview_dark_background"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/design_default_color_secondary_variant"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bt_search"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_margin="10dp"
            android:onClick="@{(v) -> GithubSearchViewModel.onClick(v)}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/et_user" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:visibility="@{GithubSearchViewModel.name==null?View.GONE : View.VISIBLE}"
            android:text="Name:"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/et_user"
            app:layout_constraintLeft_toLeftOf="@id/et_user"/>

        <TextView
            android:id="@+id/tv_name_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="@{GithubSearchViewModel.name==null?View.GONE : View.VISIBLE}"
            android:text="@={GithubSearchViewModel.name}"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/et_user"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_name"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Id:"
            android:visibility="@{GithubSearchViewModel.id==null?View.GONE : View.VISIBLE}"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintLeft_toLeftOf="@id/tv_name"/>

        <TextView
            android:id="@+id/tv_id_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="@{GithubSearchViewModel.id==null?View.GONE : View.VISIBLE}"
            android:text="@={GithubSearchViewModel.id}"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_id"/>


        <TextView
            android:id="@+id/tv_company"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Company:"
            android:visibility="@{GithubSearchViewModel.company==null?View.GONE : View.VISIBLE}"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_id"
            app:layout_constraintLeft_toLeftOf="@id/tv_id"/>

        <TextView
            android:id="@+id/tv_company_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="@{GithubSearchViewModel.company==null?View.GONE : View.VISIBLE}"
            android:text="@={GithubSearchViewModel.company}"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_id"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_company"/>
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Location:"
            android:visibility="@{GithubSearchViewModel.location==null?View.GONE : View.VISIBLE}"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_company"
            app:layout_constraintLeft_toLeftOf="@id/tv_company"/>

        <TextView
            android:id="@+id/tv_location_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="@{GithubSearchViewModel.location==null?View.GONE : View.VISIBLE}"
            android:text="@={GithubSearchViewModel.location}"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_company"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_location"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Email:"
            android:visibility="@{GithubSearchViewModel.email==null?View.GONE : View.VISIBLE}"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_location"
            app:layout_constraintLeft_toLeftOf="@id/tv_location"/>

        <TextView
            android:id="@+id/tv_email_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="@{GithubSearchViewModel.email==null?View.GONE : View.VISIBLE}"
            android:text="@={GithubSearchViewModel.email}"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_location"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_email"/>
        <TextView
            android:id="@+id/tv_bio"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Bio:"
            android:visibility="@{GithubSearchViewModel.bio==null?View.GONE : View.VISIBLE}"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_email"
            app:layout_constraintLeft_toLeftOf="@id/tv_email"/>

        <TextView
            android:id="@+id/tv_bio_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="@{GithubSearchViewModel.bio==null?View.GONE : View.VISIBLE}"
            android:text="@={GithubSearchViewModel.bio}"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_email"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_bio"/>
        <TextView
            android:id="@+id/tv_public_repos"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Repos:"
            android:visibility="@{GithubSearchViewModel.public_repos==null?View.GONE : View.VISIBLE}"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_bio"
            app:layout_constraintLeft_toLeftOf="@id/tv_bio"/>

        <TextView
            android:id="@+id/tv_view_repos"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text="View Repos"
            android:layout_marginStart="35dp"
            android:visibility="@{GithubSearchViewModel.public_repos==null||GithubSearchViewModel.public_repos.equals(`0`)?View.GONE : View.VISIBLE}"
            android:layout_marginTop="15dp"
            android:onClick="@{(v) -> GithubSearchViewModel.onClick(v)}"
            android:textColor="@color/design_default_color_error"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_bio"
            app:layout_constraintLeft_toRightOf="@id/tv_public_repos_data"/>

        <TextView
            android:id="@+id/tv_public_repos_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="@{GithubSearchViewModel.public_repos==null?View.GONE : View.VISIBLE}"
            android:text="@={GithubSearchViewModel.public_repos}"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_bio"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_public_repos"/>
        <TextView
            android:id="@+id/tv_public_gists"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Public_gists:"
            android:visibility="@{GithubSearchViewModel.public_gists==null?View.GONE : View.VISIBLE}"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_public_repos"
            app:layout_constraintLeft_toLeftOf="@id/tv_public_repos"/>

        <TextView
            android:id="@+id/tv_public_gists_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="@{GithubSearchViewModel.public_gists==null?View.GONE : View.VISIBLE}"
            android:text="@={GithubSearchViewModel.public_gists}"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_public_repos"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_public_gists"/>
        <TextView
            android:id="@+id/tv_followers"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Followers:"
            android:visibility="@{GithubSearchViewModel.followers==null?View.GONE : View.VISIBLE}"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_public_gists"
            app:layout_constraintLeft_toLeftOf="@id/tv_public_gists"/>

        <TextView
            android:id="@+id/tv_followers_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="@{GithubSearchViewModel.followers==null?View.GONE : View.VISIBLE}"
            android:text="@={GithubSearchViewModel.followers}"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_public_gists"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_followers"/>
        <TextView
            android:id="@+id/tv_following"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Following:"
            android:visibility="@{GithubSearchViewModel.following==null?View.GONE : View.VISIBLE}"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_followers"
            app:layout_constraintLeft_toLeftOf="@id/tv_followers"/>

        <TextView
            android:id="@+id/tv_following_data"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="@{GithubSearchViewModel.following==null?View.GONE : View.VISIBLE}"
            android:text="@={GithubSearchViewModel.following}"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_followers"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toRightOf="@id/tv_following"/>

     <FrameLayout android:id="@+id/container" android:layout_height="match_parent" android:layout_width="match_parent" android:elevation="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>